    <div class="font-size-dropdown" id="fontSizeDropdown">
        <img src="/images/icons/font-size.png" alt="Font Size" />
        <div class="font-size-popup" id="fontSizePopup">
            <div class="font-buttons">
                <button onclick="changeFontSize('small')" title="Decrease Font">A-</button>
                <button onclick="changeFontSize('reset')" title="Reset Font">A</button>
                <button onclick="changeFontSize('large')" title="Increase Font">A+</button>
            </div>
        </div>
    </div>


    @*6. Theme Switch*@
    <div class="theme-switcher" title="Switch Theme">
        <a href="#" class="theme-default" onclick="setTheme('white')">
            <img src="/images/icons/theme-white.png" alt="White Theme" />
        </a>
        <a href="#" class="theme-black" onclick="setTheme('black')">
            <img src="/images/icons/theme-black.png" alt="Black Theme" />
        </a>
        <a href="#" class="theme-gray" onclick="setTheme('gray')">
            <img src="/images/icons/theme-gray.png" alt="Gray Theme" />
        </a>
    </div>

    @*7. Search Icon*@
    <a href="#" onclick="toggleSearchBar()" title="Search">
        <img src="/images/icons/search.png" alt="Search" />
    </a>

    @*8. Language Switcher Dropdown*@
    <div class="lang-switcher" id="langSwitcher">
        <img src="/images/icons/lang.png" alt="Language" onclick="toggleLangDropdown()" />
        <div class="lang-popup" id="langPopup">
            <select onchange="switchLanguage(this.value)">
                <option value="en">English</option>
                <option value="hi">हिंदी</option>
            </select>
        </div>
    </div>
</div>

